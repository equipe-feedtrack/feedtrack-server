generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

enum StatusProdutoPrisma {
  ATIVO
  INATIVO
}

enum tipo_usuario {
  FUNCIONARIO
  ADMINISTRADOR
}

model usuarios {
  id Int @id @default(autoincrement())
  nome String
  usuario String @unique
  senha String
  telefone String
  endereco String
  tipo_usuario tipo_usuario // 'cliente' ou 'funcionario'
}

model vendedores {
  id Int @id @default(autoincrement())
  nome String
  telefone String
}

model clientes {
  id Int @id @default(autoincrement())
  nome String
  telefone String

}

model produto {
  id Int @id @default(autoincrement())
  nome String
  descricao String
  valor Decimal
  dataCriacao DateTime @default(now())
  dataAtualizacao DateTime @updatedAt
  dataExclusao DateTime?
  status StatusProdutoPrisma @default(ATIVO)
}

model compras {
 id Int @id @default(autoincrement())
}

model feedback{
  id Int @id @default(autoincrement())
}
