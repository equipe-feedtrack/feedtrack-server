{
  "compilerOptions": {

    "target": "ES2020",                                
    "module": "commonjs",
    "baseUrl": "./src",                          
     "paths": {
      "@modules/*": ["./modules/*"],
      "@shared/*": ["./shared/*"]
      },                                      
     "rootDirs": ["src"],                                  
     "sourceMap": true,                               
     "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                   
     "strictPropertyInitialization": false,            
    "skipLibCheck": true                            
  }
}
