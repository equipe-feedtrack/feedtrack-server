// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// --- ENUMS (Padronizados para PascalCase) ---

enum StatusUsuario {
  ATIVO
  INATIVO
}

enum TipoUsuario {
  USER
  ADMIN
  SUPER_ADMIN
}

enum StatusFormulario {
  PENDENTE
  ENVIADO
  FALHA
}

enum TipoCampanha {
  POS_COMPRA
  AUTOMATICO
  PROMOCIONAL
  SATISFACAO
}

enum SegmentoAlvo {
  TODOS_CLIENTES
  CLIENTES_REGULARES
  NOVOS_CLIENTES
  CLIENTES_PREMIUM
}

enum TipoAcao {
  CRIAR_USUARIO
  ATUALIZAR_USUARIO
  CRIAR_CLIENTE
  ATUALIZAR_CLIENTE
  DESATIVAR_CAMPANHA
  INICIAR_ENVIO_CAMPANHA
  // ... adicione todas as ações necessárias
}

enum EntidadeAlvoTipo {
  USUARIO
  CLIENTE
  CAMPANHA
  FORMULARIO
  PRODUTO
  ENVIO_FORMULARIO
}

enum CanalEnvio {
  EMAIL
  WHATSAPP
}

// --- MODELS ---

model Usuario {
  id              String        @id @default(uuid())
  nome            String        @unique
  email           String        @unique
  senha           String
  tipo            TipoUsuario
  status          StatusUsuario
  dataCriacao     DateTime      @default(now()) @map("data_criacao")
  dataAtualizacao DateTime      @updatedAt @map("data_atualizacao")
  dataExclusao    DateTime?     @map("data_exclusao")

  // Relações
  funcionario      Funcionario?
  enviosFormulario EnvioFormulario[]
  logsAtividade    LogAtividade[]
  //clientesAtendidos Cliente[] // Clientes sob responsabilidade deste usuário/vendedor

  @@map("usuarios")
}

model Funcionario {
  id              String        @id @default(uuid())
  cargo           String
  dataAdmissao    DateTime      @map("data_admissao")
  status          StatusUsuario @default(ATIVO)
  dataCriacao     DateTime      @default(now()) @map("data_criacao")
  dataAtualizacao DateTime      @updatedAt @map("data_atualizacao")
  dataExclusao    DateTime?     @map("data_exclusao")

  // Relação 1-para-1 com Usuario
  usuario   Usuario @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  usuarioId String  @unique @map("usuario_id")

  @@map("funcionarios")
}

model LogAtividade {
  id             String   @id @default(uuid())
  acao           TipoAcao
  detalhes       String?
  dataOcorrencia DateTime @default(now()) @map("data_ocorrencia")

  // Denormalizado para facilitar consulta de logs
  nomeUsuario String      @map("nome_usuario")
  tipoUsuario TipoUsuario @map("tipo_usuario")

  // Relação com o usuário que realizou a ação
  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId String  @map("usuario_id")

  // Identificação polimórfica do alvo da ação
  entidadeAlvoId   String?           @map("entidade_alvo_id")
  entidadeAlvoTipo EntidadeAlvoTipo? @map("entidade_alvo_tipo")

  @@map("logs_atividade")
}

model Cliente {
  id                  String        @id @default(uuid())
  nome                String
  telefone            String?
  email               String?
  vendedorResponsavel String        @map("vendedor_responsavel")
  cidade              String?
  status              StatusUsuario
  dataCriacao         DateTime      @default(now()) @map("data_criacao")
  dataAtualizacao     DateTime      @updatedAt @map("data_atualizacao")
  dataExclusao        DateTime?     @map("data_exclusao")

  // Relações
  produtos         ClientesOnProdutos[]
  enviosFormulario EnvioFormulario[]

  @@map("clientes")
}

model ClientesOnProdutos {
  cliente   Cliente @relation(fields: [clienteId], references: [id])
  clienteId String  @map("cliente_id")
  produto   Produto @relation(fields: [produtoId], references: [id])
  produtoId String  @map("produto_id")

  @@id([clienteId, produtoId])
  @@map("clientes_on_produtos")
}

model Produto {
  id              String    @id @default(uuid())
  nome            String
  descricao       String
  valor           Int
  ativo           Boolean   @default(true)
  dataCriacao     DateTime  @default(now()) @map("data_criacao")
  dataAtualizacao DateTime  @updatedAt @map("data_atualizacao")
  dataExclusao    DateTime? @map("data_exclusao")

  // Relação Um-para-Muitos (um Cliente pode ter vários Produtos)
  clientes ClientesOnProdutos[]

  @@map("produtos")
}

model Pergunta {
  id              String    @id @default(uuid())
  texto           String
  tipo            String
  opcoes          Json?
  ativo           Boolean   @default(true)
  dataCriacao     DateTime  @default(now()) @map("data_criacao")
  dataAtualizacao DateTime  @updatedAt @map("data_atualizacao")
  dataExclusao    DateTime? @map("data_exclusao")

  // Relação Muitos-para-Muitos com Formulário
  formularios PerguntasOnFormularios[]

  @@map("perguntas")
}

model Formulario {
  id              String    @id @default(uuid())
  titulo          String // Renomeado de 'texto' para 'titulo' para maior clareza
  descricao       String
  ativo           Boolean
  dataCriacao     DateTime  @default(now()) @map("data_criacao")
  dataAtualizacao DateTime  @updatedAt @map("data_atualizacao")
  dataExclusao    DateTime? @map("data_exclusao")

  // Relações
  perguntas PerguntasOnFormularios[]
  campanhas Campanha[]
  feedbacks Feedback[]
  envios    EnvioFormulario[]

  @@map("formularios")
}

// Tabela de junção explícita para a relação N-N entre Pergunta e Formulário
model PerguntasOnFormularios {
  pergunta     Pergunta   @relation(fields: [perguntaId], references: [id])
  perguntaId   String     @map("pergunta_id")
  formulario   Formulario @relation(fields: [formularioId], references: [id], onDelete: Cascade)
  formularioId String     @map("formulario_id")

  // Exemplo de campo extra na tabela de junção
  ordemNaLista Int @map("ordem_na_lista")

  @@id([perguntaId, formularioId])
  @@map("perguntas_on_formularios")
}

model Campanha {
  id                String       @id @default(uuid())
  titulo            String
  descricao         String?
  tipoCampanha      TipoCampanha @map("tipo_campanha")
  segmentoAlvo      SegmentoAlvo @map("segmento_alvo")
  dataInicio        DateTime     @map("data_inicio")
  dataFim           DateTime?    @map("data_fim")
  canalEnvio        String       @default("EMAIL") @map("canal_envio") 
  templateMensagem  String       @map("template_mensagem")
  ativo             Boolean      @default(true)
  dataCriacao       DateTime     @default(now()) @map("data_criacao")
  dataAtualizacao   DateTime     @updatedAt @map("data_atualizacao")
  dataExclusao      DateTime?    @map("data_exclusao")

  // Relação com o Formulário
  formulario   Formulario        @relation(fields: [formularioId], references: [id], onDelete: Cascade)
  formularioId String            @map("formulario_id")
  envios       EnvioFormulario[]

  @@map("campanhas")
}

model EnvioFormulario {
  id                 String           @id @default(uuid())
  status             StatusFormulario @default(PENDENTE)
  tentativasEnvio    Int              @default(0) @map("tentativas_envio")
  ultimaMensagemErro String?          @map("ultima_mensagem_erro")
  dataCriacao        DateTime         @default(now()) @map("data_criacao")
  dataEnvio          DateTime?        @map("data_envio")

  // Relações
  formulario   Formulario @relation(fields: [formularioId], references: [id])
  formularioId String     @map("formulario_id")
  cliente      Cliente    @relation(fields: [clienteId], references: [id])
  clienteId    String     @map("cliente_id")
  campanha     Campanha   @relation(fields: [campanhaId], references: [id])
  campanhaId   String     @map("campanha_id")
  usuario      Usuario    @relation(fields: [usuarioId], references: [id]) // Usuário que disparou o envio
  usuarioId    String     @map("usuario_id")
  feedback     Feedback? // Relação 1-para-1 com Feedback

  @@map("envios_formulario")
}

model Feedback {
  id           String    @id @default(uuid())
  resposta     Json
  dataCriacao  DateTime  @default(now()) @map("data_criacao")
  dataExclusao DateTime? @map("data_exclusao")

  // Relação com o Formulário (para saber a estrutura das perguntas)
  formulario   Formulario @relation(fields: [formularioId], references: [id], onDelete: Cascade)
  formularioId String     @map("formulario_id")

  // Relação 1-para-1 com EnvioFormulario
  envio   EnvioFormulario @relation(fields: [envioId], references: [id])
  envioId String          @unique @map("envio_id")

  @@map("feedbacks")
}
